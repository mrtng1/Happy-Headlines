{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": ["Serilog.Sinks.Seq"],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Seq",
        "Args": { 
          "serverUrl": "http://localhost:5341",
          "dockerUrl": "http://seq:5341"
        }
      }
    ],
    "Enrich": ["FromLogContet", "WithMachineName", "WithThreadId"],
    "Properties": {
      "Application": "HappyHeadlines"
    }
  }
}
