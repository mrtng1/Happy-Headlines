{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Global": "Host=localhost;Database=ArticlesGlobal;Username=postgres;Password=",
    "Africa": "Host=localhost;Database=ArticlesAfrica;Username=postgres;Password=",
    "Antarctica": "Host=localhost;Database=ArticlesAntarctica;Username=postgres;Password=",
    "Asia": "Host=localhost;Database=ArticlesAsia;Username=postgres;Password=",
    "Europe": "Host=localhost;Database=ArticlesEurope;Username=postgres;Password=",
    "NorthAmerica": "Host=localhost;Database=ArticlesNorthAmerica;Username=postgres;Password=",
    "Australia": "Host=localhost;Database=ArticlesAustralia;Username=postgres;Password=",
    "SouthAmerica": "Host=localhost;Database=ArticlesSouthAmerica;Username=postgres;Password="
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Seq"],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Seq",
        "Args": { 
          "serverUrl": "http://localhost:5341",
          "dockerUrl": "http://seq:5341"
        }
      }
    ],
    "Enrich": ["FromLogContet", "WithMachineName", "WithThreadId"],
    "Properties": {
      "Application": "HappyHeadlines"
    }
  }
}
